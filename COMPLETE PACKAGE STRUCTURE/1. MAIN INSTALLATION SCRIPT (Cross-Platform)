cat > install.sh << 'EOF'
#!/bin/bash
# ==================================================
# ğŸ›¡ï¸ SG CYBER SHIELD v1.0 - Installation Script
# ==================================================
# SAFEWAY GUARDIAN | Nicolas E. Santiago
# Saitama, Japan | Nov. 10, 2025
