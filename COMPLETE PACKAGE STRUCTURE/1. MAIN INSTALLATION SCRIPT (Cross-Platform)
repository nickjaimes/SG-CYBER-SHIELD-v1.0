    # sg_status command
    cat > sg_status << 'CMDEOF'
#!/bin/bash
echo "ğŸ“Š SG CYBER SHIELD v1.0 - SYSTEM STATUS"
echo "SAFEWAY GUARDIAN | Nicolas E. Santiago"
echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
docker ps | grep sg_core && echo "âœ… SECURITY CORE: ACTIVE" || echo "âŒ SECURITY CORE: OFFLINE"
