    # Make executable
    chmod +x *
    
    # Add to PATH based on OS
    case "$OS" in
        "MACOS"|"LINUX")
            echo 'export PATH="$HOME/sg_commands:$PATH"' >> ~/.zshrc
            source ~/.zshrc 2>/dev/null || source ~/.bashrc
            ;;
        "WINDOWS")
            echo "For Windows, add %USERPROFILE%\\sg_commands to your PATH"
            ;;
    esac
    
    echo -e "${GREEN}âœ… SG Command System installed${NC}"
