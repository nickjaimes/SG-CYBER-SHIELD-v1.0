echo ""
echo "â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—"
echo "â•‘           SG CYBER SHIELD v1.0           â•‘"
echo "â•‘           SAFEWAY GUARDIAN               â•‘"
echo "â•‘    Nicolas E. Santiago, Saitama, Japan   â•‘"
echo "â•‘        Nov. 10, 2025                     â•‘"
echo "â•‘   Powered by DEEPSEEK AI RESEARCH TECH   â•‘"
echo "â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
echo ""

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
PURPLE='\033[0;35m'
CYAN='\033[0;36m'
NC='\033[0m'

# Detect OS
detect_os() {
    case "$(uname -s)" in
        Darwin*)    OS="MACOS" ;;
        Linux*)     OS="LINUX" ;;
        CYGWIN*|MINGW*|MSYS*) OS="WINDOWS" ;;
        *)          OS="UNKNOWN" ;;
    esac
    echo -e "${CYAN}ğŸŒ Detected OS: $OS${NC}"
}

# Check dependencies
check_dependencies() {
    echo -e "${BLUE}ğŸ” Checking dependencies...${NC}"
    
    # Check Docker
    if command -v docker &> /dev/null; then
        echo -e "${GREEN}âœ… Docker is installed${NC}"
    else
        echo -e "${RED}âŒ Docker is not installed${NC}"
        echo -e "${YELLOW}Please install Docker first:${NC}"
        case "$OS" in
            "MACOS") echo "   https://docs.docker.com/desktop/install/mac-install/" ;;
            "LINUX") echo "   https://docs.docker.com/engine/install/" ;;
            "WINDOWS") echo "   https://docs.docker.com/desktop/install/windows-install/" ;;
        esac
        exit 1
    fi
    
    # Check Docker running
    if docker info &> /dev/null; then
        echo -e "${GREEN}âœ… Docker is running${NC}"
    else
        echo -e "${RED}âŒ Docker is not running${NC}"
        echo -e "${YELLOW}Please start Docker Desktop and rerun this script${NC}"
        exit 1
    fi
}

# Create project structure
create_structure() {
    echo -e "${BLUE}ğŸ“ Creating SG Cyber Shield structure...${NC}"
    
    mkdir -p sg_cyber_shield
    cd sg_cyber_shield
    
    # Create docker-compose.yml
    cat > docker-compose.yml << 'DOCKEREOF'
# ==================================================
# SG CYBER SHIELD v1.0 - Container Configuration
# SAFEWAY GUARDIAN | Nicolas E. Santiago
# Saitama, Japan | Nov. 10, 2025
# Powered by DEEPSEEK AI RESEARCH TECHNOLOGY
# ==================================================
services:
  sg_core:
    image: centos:8
    container_name: sg_core
    command: sleep infinity
    volumes:
      - ./security_data:/etc/sg_shield
DOCKEREOF

    echo -e "${GREEN}âœ… Project structure created${NC}"
}

# Setup container environment
setup_container() {
    echo -e "${BLUE}ğŸ³ Setting up security container...${NC}"
    
    # Start container
    docker-compose up -d
    
    # Install tools and create dashboard
    docker exec -it sg_core /bin/bash -c '
    # Fix repositories for CentOS 8
    cd /etc/yum.repos.d/
    sed -i "s/mirrorlist/#mirrorlist/g" /etc/yum.repos.d/CentOS-*
    sed -i "s|#baseurl=http://mirror.centos.org|baseurl=http://vault.centos.org|g" /etc/yum.repos.d/CentOS-*
    
    # Update system
    yum update -y > /dev/null 2>&1
    
    # Install security tools
    yum install -y net-tools lsof psacct psmisc > /dev/null 2>&1
    
    # Create SG Cyber Shield Dashboard
    cat > /usr/local/bin/sg_dashboard.sh << "SCRIPTEOF"
#!/bin/bash
# ==================================================
# ğŸ›¡ï¸ SG CYBER SHIELD v1.0 - Security Dashboard
# SAFEWAY GUARDIAN | Nicolas E. Santiago
# Saitama, Japan | Nov. 10, 2025
# Powered by DEEPSEEK AI RESEARCH TECHNOLOGY
# ==================================================

show_banner() {
    clear
    echo "â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—"
    echo "â•‘           SG CYBER SHIELD v1.0           â•‘"
    echo "â•‘           SAFEWAY GUARDIAN               â•‘"
    echo "â•‘    Nicolas E. Santiago, Saitama, Japan   â•‘"
    echo "â•‘        Nov. 10, 2025                     â•‘"
    echo "â•‘   Powered by DEEPSEEK AI RESEARCH TECH   â•‘"
    echo "â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
    echo ""
}

while true; do
    show_banner
    echo "ğŸ“Š SYSTEM DASHBOARD"
    echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
    echo "ğŸ•  Time: $(date)"
    echo "ğŸ’»  Host: $(hostname)"
    echo "ğŸ³  Mode: Security Container"
    echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
    echo ""
    echo "ğŸ”§ SECURITY TOOLS"
    echo "â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€"
    echo "1. ğŸ” Real-time System Monitor"
    echo "2. ğŸ“Š Process Analysis & Threat Scan"
    echo "3. ğŸŒ Network Security Status"
    echo "4. ğŸ’¾ Storage & Disk Analysis"
    echo "5. ğŸ›¡ï¸ Comprehensive Security Audit"
    echo "6. ğŸ“ˆ Performance Metrics"
    echo "7. ğŸšª Exit SG Cyber Shield"
    echo "â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€"
    echo -n "Choose option [1-7]: "
    read option
    
    case $option in
        1)
            echo "Loading Real-time System Monitor..."
            top -n 1
            ;;
        2)
            echo "Running Process Analysis..."
            echo "=== TOP PROCESSES BY CPU ==="
            ps aux --sort=-%cpu | head -15
            echo ""
            echo "=== SECURITY ASSESSMENT ==="
            ps aux | grep -E "(ssh|ftp|telnet)" | grep -v grep || echo "No remote access services detected"
            ;;
        3)
            echo "Checking Network Security..."
            echo "=== ACTIVE CONNECTIONS ==="
            netstat -tulp 2>/dev/null || echo "Run: yum install net-tools for full features"
            echo ""
            echo "=== LISTENING PORTS ==="
            netstat -tulpn 2>/dev/null | grep LISTEN || echo "Network tools not fully installed"
            ;;
        4)
            echo "Analyzing Storage..."
            echo "=== DISK USAGE ==="
            df -h
            echo ""
            echo "=== LARGE FILES ==="
            find / -type f -size +100M 2>/dev/null | head -10
            ;;
        5)
            echo "ğŸ›¡ï¸ Running Security Audit..."
            echo "=== SYSTEM INFORMATION ==="
            echo "Kernel: $(uname -r)"
            echo "Architecture: $(uname -m)"
            echo "Uptime: $(uptime -p)"
            echo ""
            echo "=== USER SESSION ==="
            who
            echo ""
            echo "=== RECENT LOGINS ==="
            last | head -10
            ;;
        6)
            echo "ğŸ“ˆ Performance Metrics"
            echo "=== MEMORY USAGE ==="
            free -h
            echo ""
            echo "=== LOAD AVERAGE ==="
            uptime
            echo ""
            echo "=== ACTIVE PROCESSES ==="
            ps aux | wc -l
            echo "Total processes running"
            ;;
        7)
            echo "Exiting SG Cyber Shield..."
            echo "Thank you for using SG Cyber Shield v1.0"
            echo "SAFEWAY GUARDIAN | Nicolas E. Santiago"
            exit 0
            ;;
        *)
            echo "Invalid option. Please choose 1-7."
            ;;
    esac
    
    echo ""
    echo "Press Enter to continue..."
    read
done
SCRIPTEOF

    chmod +x /usr/local/bin/sg_dashboard.sh
    '
    
    echo -e "${GREEN}âœ… Security container configured${NC}"
}

# Create command system
create_commands() {
    echo -e "${BLUE}ğŸ¯ Creating SG Command System...${NC}"
    
    # Create commands directory
    mkdir -p ../sg_commands
    cd ../sg_commands
    
    # sg_run command
    cat > sg_run << 'CMDEOF'
#!/bin/bash
echo "â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—"
echo "â•‘              SG CYBER SHIELD             â•‘"
echo "â•‘              SAFEWAY GUARDIAN            â•‘"
echo "â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
echo "ğŸš€ Activating Security System..."
cd ~/sg_cyber_shield
docker-compose up -d
echo "âœ… SG Cyber Shield v1.0 is now ACTIVE"
echo "ğŸ¯ Run 'sg_dashboard' to access security console"
