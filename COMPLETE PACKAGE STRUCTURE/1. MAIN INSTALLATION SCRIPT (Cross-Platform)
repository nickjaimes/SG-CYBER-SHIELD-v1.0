    echo "  sg_run       - Start security system"
    echo "  sg_dashboard - Open security console"
    echo "  sg_scan      - Run security scan"
    echo "  sg_status    - Check system status"
    echo "  sg_stop      - Stop security system"
    echo ""
    echo -e "${YELLOW}ğŸ”’ Your cybersecurity command center is ready!${NC}"
    echo -e "${PURPLE}ğŸ›¡ï¸  SG Cyber Shield - Always Vigilant!${NC}"
