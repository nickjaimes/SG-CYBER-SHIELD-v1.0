    # sg_stop command
    cat > sg_stop << 'CMDEOF'
#!/bin/bash
echo "ğŸ›‘ Securing SG Cyber Shield..."
echo "Nicolas E. Santiago | SAFEWAY GUARDIAN"
cd ~/sg_cyber_shield
docker-compose down
