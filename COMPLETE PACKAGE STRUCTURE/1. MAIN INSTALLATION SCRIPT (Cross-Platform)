# Main installation function
main() {
    echo -e "${PURPLE}ğŸš€ Starting SG Cyber Shield v1.0 Installation...${NC}"
    echo ""
    
    detect_os
    echo ""
    
    check_dependencies
    echo ""
    
    create_structure
    echo ""
    
    setup_container
    echo ""
    
    create_commands
    echo ""
    
    # Final output
    echo -e "${GREEN}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—${NC}"
    echo -e "${GREEN}â•‘         INSTALLATION COMPLETE!           â•‘${NC}"
    echo -e "${GREEN}â•‘         SG CYBER SHIELD v1.0             â•‘${NC}"
    echo -e "${GREEN}â•‘         SAFEWAY GUARDIAN                 â•‘${NC}"
    echo -e "${GREEN}â•‘    Nicolas E. Santiago, Saitama, Japan   â•‘${NC}"
    echo -e "${GREEN}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
    echo ""
